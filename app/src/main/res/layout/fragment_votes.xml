<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textVotes1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/news_background"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:text="В субботу в 9.00 состоится собрание у дома председателя для обсуждения необходимости установки шлагбаума"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nameVotesAuthor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/textVotes1"
        app:layout_constraintStart_toStartOf="@+id/textVotes1" />

    <TextView
        android:id="@+id/dateVotes1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="12:30 15.09.20"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textVotes1"
        app:layout_constraintEnd_toEndOf="@+id/textVotes1" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVoteOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:cornerRadius="20dp"
        android:text="За"
        app:layout_constraintEnd_toStartOf="@+id/btnVoteNo"
        app:layout_constraintTop_toTopOf="@+id/btnVoteNo" />

    <Button
        android:id="@+id/btnVoteNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:cornerRadius="20dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:text="Против"
        app:layout_constraintEnd_toStartOf="@+id/btnVoteIDK"
        app:layout_constraintTop_toTopOf="@+id/btnVoteIDK" />

    <Button
        android:id="@+id/btnVoteIDK"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Воздержусь"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textVotes1"
        app:layout_constraintTop_toBottomOf="@+id/textVotes1" />

    <TextView
        android:id="@+id/textVotes2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/news_background"
        android:paddingStart="8dp"
        android:paddingTop="4dp"
        android:paddingEnd="8dp"
        android:paddingBottom="4dp"
        android:text="В субботу в 9.00 состоится собрание у дома председателя для обсуждения необходимости установки шлагбаума"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVoteNo" />

    <TextView
        android:id="@+id/nameVotesAuthor2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/textVotes2"
        app:layout_constraintStart_toStartOf="@+id/textVotes2" />

    <TextView
        android:id="@+id/dateVotes2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="12:30 15.09.20"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textVotes2"
        app:layout_constraintEnd_toEndOf="@+id/textVotes2" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVoteOk2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:cornerRadius="20dp"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:text="За"
        app:layout_constraintEnd_toStartOf="@+id/btnVoteNo2"
        app:layout_constraintTop_toTopOf="@+id/btnVoteNo2" />

    <Button
        android:id="@+id/btnVoteNo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        app:cornerRadius="20dp"
        android:text="Против"
        app:layout_constraintEnd_toStartOf="@+id/btnVoteIDK2"
        app:layout_constraintTop_toTopOf="@+id/btnVoteIDK2" />

    <Button
        android:id="@+id/btnVoteIDK2"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Воздержусь"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/textVotes2"
        app:layout_constraintTop_toBottomOf="@+id/textVotes2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonToNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="Новости" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:text="Голосование" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:background="@drawable/underline_background"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>